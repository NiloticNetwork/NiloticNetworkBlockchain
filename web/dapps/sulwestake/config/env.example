# =============================================================================
# Sulwestake DApp Environment Variables
# =============================================================================
# Copy this file to .env.local and update with your actual values
# cp config/env.example .env.local

# =============================================================================
# Wallet Configuration
# =============================================================================
# MetaMask is used for wallet connection
# No additional configuration required for basic functionality

# =============================================================================
# Nilotic Blockchain Configuration
# =============================================================================
# Chain ID for the Nilotic blockchain network
# Based on the running blockchain instance
NEXT_PUBLIC_NILOTIC_CHAIN_ID=1337

# Nilotic Blockchain API Endpoints
# The blockchain is running on port 5500 as shown in the logs
NEXT_PUBLIC_NILOTIC_API_URL=http://localhost:5500
NEXT_PUBLIC_NILOTIC_RPC_URL=http://localhost:5500

# Blockchain API Endpoints (from the logs)
NEXT_PUBLIC_BLOCKCHAIN_BASE_URL=http://localhost:5500
NEXT_PUBLIC_MINING_ENDPOINT=http://localhost:5500/mine
NEXT_PUBLIC_METRICS_ENDPOINT=http://localhost:5500/metrics
NEXT_PUBLIC_BLOCKCHAIN_ENDPOINT=http://localhost:5500

# Staking Contract Configuration
# These will be updated when staking contracts are deployed
NEXT_PUBLIC_STAKING_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_NILOTIC_TOKEN_ADDRESS=0x1234567890123456789012345678901234567890

# Token Configuration
NEXT_PUBLIC_TOKEN_SYMBOL=NIL
NEXT_PUBLIC_TOKEN_DECIMALS=18
NEXT_PUBLIC_TOKEN_NAME=Nilotic Token

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_GOVERNANCE=true
NEXT_PUBLIC_ENABLE_CHARITY_POOLS=true
NEXT_PUBLIC_ENABLE_CHALLENGES=true
NEXT_PUBLIC_ENABLE_REFERRALS=true
NEXT_PUBLIC_ENABLE_LEADERBOARD=true

# =============================================================================
# Analytics & Monitoring
# =============================================================================
# Google Analytics ID (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# API Configuration
# =============================================================================
# Backend API URL (if using separate backend)
NEXT_PUBLIC_API_URL=https://api.sulwestake.com

# GraphQL endpoint (optional)
NEXT_PUBLIC_GRAPHQL_URL=https://api.sulwestake.com/graphql

# =============================================================================
# Social & Community
# =============================================================================
# Telegram Bot Token (for community features)
NEXT_PUBLIC_TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Discord Webhook URL (for notifications)
NEXT_PUBLIC_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook

# =============================================================================
# External Services
# =============================================================================
# IPFS Gateway (for decentralized storage)
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io

# The Graph endpoint (for subgraph queries)
NEXT_PUBLIC_GRAPH_ENDPOINT=https://api.thegraph.com/subgraphs/name/your-subgraph

# =============================================================================
# Performance & Caching
# =============================================================================
# Redis URL (for caching, optional)
REDIS_URL=redis://localhost:6379

# Database URL (if using database)
DATABASE_URL=postgresql://user:password@localhost:5432/sulwestake

# =============================================================================
# Security
# =============================================================================
# JWT Secret (for API authentication)
JWT_SECRET=your_jwt_secret_here

# Rate limiting
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=900000

# =============================================================================
# Development & Testing
# =============================================================================
# Enable debug mode
NEXT_PUBLIC_DEBUG=true

# Test wallet addresses (for development)
NEXT_PUBLIC_TEST_WALLET_1=0x1234567890123456789012345678901234567890
NEXT_PUBLIC_TEST_WALLET_2=0x0987654321098765432109876543210987654321

# Mock data for development
NEXT_PUBLIC_USE_MOCK_DATA=false

# =============================================================================
# Staking Configuration
# =============================================================================
# Minimum stake amount (in wei)
NEXT_PUBLIC_MIN_STAKE_AMOUNT=1000000000000000000

# Maximum stake amount (in wei)
NEXT_PUBLIC_MAX_STAKE_AMOUNT=1000000000000000000000000

# Default APY percentage
NEXT_PUBLIC_DEFAULT_APY=12.5

# Lock period in seconds
NEXT_PUBLIC_LOCK_PERIOD=604800

# =============================================================================
# Rewards Configuration
# =============================================================================
# Reward distribution interval (in seconds)
NEXT_PUBLIC_REWARD_INTERVAL=3600

# Charity donation percentage
NEXT_PUBLIC_CHARITY_PERCENTAGE=5

# Referral reward percentage
NEXT_PUBLIC_REFERRAL_PERCENTAGE=2

# =============================================================================
# Governance Configuration
# =============================================================================
# Minimum tokens required for governance participation
NEXT_PUBLIC_GOVERNANCE_THRESHOLD=1000000000000000000000

# Voting period duration (in seconds)
NEXT_PUBLIC_VOTING_PERIOD=259200

# =============================================================================
# Localization
# =============================================================================
# Default language
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Supported languages
NEXT_PUBLIC_SUPPORTED_LOCALES=en,sw,yo,am

# =============================================================================
# Network Configuration
# =============================================================================
# Network name
NEXT_PUBLIC_NETWORK_NAME=Nilotic

# Network currency symbol
NEXT_PUBLIC_NETWORK_CURRENCY=NIL

# Block explorer URL
NEXT_PUBLIC_BLOCK_EXPLORER_URL=http://localhost:5500

# =============================================================================
# UI/UX Configuration
# =============================================================================
# Theme (light/dark/auto)
NEXT_PUBLIC_THEME=dark

# Animation speed (fast/normal/slow)
NEXT_PUBLIC_ANIMATION_SPEED=normal

# Show tutorial for new users
NEXT_PUBLIC_SHOW_TUTORIAL=true

# =============================================================================
# Advanced Configuration
# =============================================================================
# Enable experimental features
NEXT_PUBLIC_EXPERIMENTAL_FEATURES=false

# Enable beta features
NEXT_PUBLIC_BETA_FEATURES=false

# Enable developer mode
NEXT_PUBLIC_DEVELOPER_MODE=false

# =============================================================================
# Notes
# =============================================================================
# 1. All variables starting with NEXT_PUBLIC_ are exposed to the client
# 2. Keep sensitive data in server-side environment variables
# 3. Update contract addresses when deploying to different networks
# 4. Test all features in development before production deployment
# 5. Monitor gas prices and network congestion for optimal performance
# 6. The Nilotic blockchain is running on port 5500 as shown in the logs
# 7. API endpoints are available at http://localhost:5500 